configure.args      --disable-silent-rules \
                    --without-boost-regex \
                    --with-pcre2=${prefix} \
                    --with-zlib=${prefix} \
                    --with-bzlib=${prefix} \
                    --with-lzma=${prefix} \
                    --with-lz4=${prefix} \
                    --with-zstd=${prefix} \
                    --disable-avx \
                    --disable-sse2 \
                    --disable-neon

variant native description {Enable CPU-specific optimizations} {
    configure.args-delete \
                    --disable-avx \
                    --disable-sse2 \
                    --disable-neon

PortSystem              1.0
PortGroup               cmake 1.1
PortGroup               compiler_blacklist_versions 1.0

name                    libyuv
set my_name             libyuv
version                 20210428
revision                0

categories              multimedia
license                 BSD
maintainers             {mascguy @mascguy} openmaintainer

description             libyuv is an open source project that includes YUV scaling and conversion functionality
long_description        {*}${description}
homepage                https://chromium.googlesource.com/libyuv/libyuv

distname                ${my_name}-${version}
dist_subdir             ${my_name}

# use git fetch rather than downloading a snapshot tarball
# which delivers a different checksum and size on each download
# this is not a stealth upgrade but a "feature" of this repo

fetch.type              git
git.url                 https://chromium.googlesource.com/${my_name}/${my_name}
git.branch              eb6e7bb63738e29efd82ea3cf2a115238a89fa51

cmake.generator         Ninja

patchfiles-append       patch-link-against-libjpeg.patch

depends_build-append \
                        port:pkgconfig

depends_lib-append \
                        path:include/turbojpeg.h:libjpeg-turbo

# Undeclared identifier: nullptr
compiler.blacklist-append \
                        {clang < 900}

PortSystem          1.0
PortGroup           python 1.0

name                py-filetype
version             1.0.12
revision            0

supported_archs     noarch
license             MIT
maintainers         {reneeotten @reneeotten} openmaintainer

description         Infer file type and MIME type of any file/buffer
long_description    ${description}

homepage            https://github.com/h2non/filetype.py

checksums           rmd160  922ca7ed01ec3472017dbf45935ca2a404a9f5b1 \
                    sha256  7ffc103209608903ac432f214ce7d60235b1cbee2bd9a7ddd7a9cdce80567c20 \
                    size    804472

python.versions     37 38 39 310

if {${name} ne ${subport}} {
    depends_build-append \
                    port:py${python.version}-setuptools


    if {${python.version} < 38} {
        depends_run-append \
                    port:py${python.version}-importlib-metadata
    }

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} README.rst History.md \
            LICENSE ${destroot}${docdir}
    }

    test.run        yes
    test.cmd        ${python.bin}
    test.args       -m unittest discover
    test.target
    test.env        PYTHONPATH=${worksrcpath}/build/lib
}
